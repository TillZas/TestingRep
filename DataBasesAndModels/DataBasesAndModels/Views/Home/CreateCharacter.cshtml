
@model DataBasesAndModels.Models.Character
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создание персонажа</h2>

<h>
    @ViewBag.Message
</h>

        @using (Html.BeginForm())
        {
            @Html.LabelFor(model => model.Name)
            <br />
            @Html.EditorFor(model => model.Name)
            <br /><br />

            @Html.LabelFor(model => model.Surname)
            <br />
            @Html.EditorFor(model => model.Surname)
            <br /><br />

            @Html.LabelFor(model => model.Age)
            <br />
            @Html.EditorFor(model => model.Age)
            @Html.ValidationMessageFor(model => model.Age)
            <br /><br />

            @Html.LabelFor(model => model.Gender)
            <br />
            @Html.DropDownListFor(Model => Model.Gender, ViewBag.GenderOptions as SelectList)
            <br /><br />

            @Html.LabelFor(model => model.FatherId)
            <br />
            @Html.DropDownListFor(Model => Model.FatherId, ViewBag.Fathers as SelectList)
            <br /><br />

            @Html.LabelFor(model => model.MotherId)
            <br />
            @Html.DropDownListFor(Model => Model.MotherId, ViewBag.Mothers as SelectList)
            <br /><br />

            @Html.LabelFor(model => model.CoupleId)
            <br />
            @Html.DropDownListFor(Model => Model.CoupleId, ViewBag.Couples as SelectList)
            <br /><br />

            @Html.LabelFor(model => model.StreetId)
            <br />
            @Html.DropDownListFor(Model => Model.StreetId, ViewBag.Streets as SelectList)
            <br /><br />

            @Html.LabelFor(model => model.HouseId)
            <br />
            @Html.EditorFor(model => model.HouseId)
            <br /><br />




            <input type="submit" value="Создать" />
        }

